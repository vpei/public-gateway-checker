{
  "name": "@ipfs/public-gateway-checker",
  "private": true,
  "version": "1.0.0",
  "description": "Checks which public gateways are online or not",
  "author": "Marcin Rataj <lidel@lidel.org>",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs/public-gateway-checker#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs/public-gateway-checker.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs/public-gateway-checker/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "main": "src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "eslintConfig": {
    "extends": "ipfs"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "start": "npx serve -l 3000 dist",
    "copy-assets": "cp-cli src/index.html dist/index.html && cp-cli src/styles.css dist/styles.css",
    "lint": "aegir lint && aegir ts -p check",
    "release": "aegir release",
    "build": "aegir build && npm run copy-assets",
    "test-TBD": "aegir test",
    "test-TBD:node": "aegir test --target node",
    "test-TBD:browser": "aegir test --target browser"
  },
  "dependencies": {
    "@dutu/rate-limiter": "github:dutu/rate-limiter#v1.3.0",
    "url-ponyfill": "^0.5.10"
  },
  "devDependencies": {
    "aegir": "^36.2.3",
    "browserslist": "^4.19.3",
    "check-aegir-project": "^1.1.1",
    "cp-cli": "^2.0.0",
    "eslint-config-ipfs": "^2.1.0",
    "eslint-plugin-compat": "^4.0.2",
    "fetch-ponyfill": "^7.1.0",
    "ipfs": "^0.62.1",
    "ipfs-geoip": "^6.0.0",
    "ipfs-http-client": "^44.1.1",
    "typescript": "^4.6.2"
  },
  "aegir": {
    "tsRepo": true,
    "release": {
      "build": false
    },
    "docs": {
      "publish": true,
      "entryPoint": "src/index.ts"
    }
  },
  "browserslist": [
    "defaults",
    "not op_mini all",
    "not IE 11"
  ],
  "todo": [
    "add browserlist support",
    "Add eslint"
  ]
}
